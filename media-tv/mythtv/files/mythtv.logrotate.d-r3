/var/log/mythtv/*.log {
    weekly
    rotate 8
    nocompress
    nocreate
    notifempty
    sharedscripts
    missingok
    olddir /var/log/mythtv/old
    postrotate
        killall -HUP mythfrontend
        killall -HUP mythbackend
        killall -HUP mythlcdserver
        find /var/log/mythtv/old -type f -mtime +30 -delete
    endscript
}
